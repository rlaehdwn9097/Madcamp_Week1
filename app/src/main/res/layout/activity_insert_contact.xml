<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertContactActivity">

    <TextView
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="Name : "
        android:textSize="23dp"
        android:id="@+id/textView_name"
        />

    <TextView
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="Email : "
        android:textSize="23dp"
        android:id="@+id/textView_email"
        android:layout_below="@+id/textView_name"
        />

    <TextView
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="Phone : "
        android:textSize="23dp"
        android:id="@+id/textView_phone"
        android:layout_below="@+id/textView_email"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:id="@+id/insert_name"
        android:layout_toRightOf="@+id/textView_name"
        android:layout_alignBottom="@+id/textView_name"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/insert_email"
        android:background="@null"
        android:layout_below="@+id/insert_name"
        android:layout_toRightOf="@+id/textView_email"
        android:layout_alignBottom="@+id/textView_email"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:id="@+id/insert_phone"
        android:layout_below="@+id/insert_email"
        android:layout_toRightOf="@+id/textView_phone"
        android:layout_alignBottom="@+id/textView_phone"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INSERT!"
        android:id="@+id/btn1"
        android:layout_below="@+id/textView_phone"/>

</RelativeLayout>